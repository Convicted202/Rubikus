{
    "compilerOptions": {
        "outDir": "./dist/ts",
        "module": "ES2020",
        "moduleResolution": "node",
        "target": "es2019",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "baseUrl": ".",
        "strict": false,
        "keyofStringsOnly": true,
        "pretty": true,
        "removeComments": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "alwaysStrict": true
    },
    "exclude": ["node_modules", "dist"]
}
